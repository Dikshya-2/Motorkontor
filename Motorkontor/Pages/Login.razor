@page "/login"
@using Motorkontor.Data
@using Motorkontor.Pages

<div style="text-align: center; align-content:center;">
    <h1>Log Ind</h1>
    <EditForm Model="LoginClass" OnValidSubmit="DoLogin">
        <DataAnnotationsValidator />
        <ValidationSummary />
        <div style="font-family:Arial;">
            <table style="border: 1px solid black; font-family:Arial" align="center">
                <tr>
                    <td>UserName</td>
                </tr>
                <tr>
                    <td>
                        <input @bind="LoginClass.UserName" placeholder="enter username" />
                    </td>
                </tr>
                <tr>
                    <td>Password</td>
                </tr>
                <tr>
                    <td>
                        <input @bind="LoginClass.Password" type="password" placeholder="enter password" />
                    </td>
                </tr>
                <tr>
                    <td>
                        <button class="btn btn-primary" @onclick="DoLogin">Log Ind</button>
                    </td>
                </tr>
                <tr>
                    <td>
                        <p>@mess</p>
                    </td>
                </tr>

            </table>
        </div>
    </EditForm>
</div>

